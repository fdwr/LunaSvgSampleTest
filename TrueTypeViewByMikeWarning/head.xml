<table description="Font header">
    <entry name="version" type="Fixed"/>
    <entry name="revision" type="Fixed"/>
    <entry name="checkSumAdjustment" type="ULONG"/>
    <entry name="magicNumber" type="ULONG"/>
    <entry name="flags" type="USHORT" semantic="bitfield">
        <bitfield bit="0" description="Baseline for font at y=0"/>
        <bitfield bit="1" description="Left sidebearing at x=0"/>
        <bitfield bit="2" description="Instructions may depend on point size"/>
        <bitfield bit="3" description="Force ppem to integer values for all internal scaler math"/>
        <bitfield bit="4" description="Instructions may alter advance width"/>
        <bitfield bit="5" description="Vertical font with baseline of x=0"/>
        <bitfield bit="7" description="Shaping required"/>
        <bitfield bit="8" description="One or more metamorphosis effects happen by default"/>
        <bitfield bit="9" description="Font contains string right-to-left glyphs"/>
        <bitfield bit="10" description="Font contains Indic-style rearrangement effects"/>
        <bitfield bit="11" description="Font is losslessly compressed"/>
        <bitfield bit="12" description="Font converted"/>
        <bitfield bit="12" description="Optimized for ClearType"/>
    </entry>
    <entry name="unitsPerEm" type="USHORT"/>
    <entry name="created" type="LONGDATETIME"/>
    <entry name="modified" type="LONGDATETIME"/>
    <entry name="xMin" type="SHORT"/>
    <entry name="yMin" type="SHORT"/>
    <entry name="xMax" type="SHORT"/>
    <entry name="yMax" type="SHORT"/>
    <entry name="macStyle" type="USHORT" semantic="bitfield">
        <bitfield bit="0" description="Bold"/>
        <bitfield bit="1" description="Italic"/>
        <bitfield bit="2" description="Underline"/>
        <bitfield bit="3" description="Outline"/>
        <bitfield bit="4" description="Shadow"/>
        <bitfield bit="5" description="Condensed"/>
        <bitfield bit="6" description="Extended"/>
    </entry>
    <entry name="lowestRecPPEM" type="USHORT"/>
    <entry name="fontDirectionHint" type="SHORT" semantic="enum">
        <enum value="0" description="Fully mixed directional glyphs"/>
        <enum value="1" description="Only strongly left to right"/>
        <enum value="2" description="Strongly left to right with neutrals"/>
        <enum value="-1" description="Only strongly right to left"/>
        <enum value="-2" description="Stronly right to left ewith neutrals"/>
    </entry>
    <entry name="indexToLocFormat" type="SHORT" semantic="enum">
        <enum value="0" description="Short offsets"/>
        <enum value="1" description="Long offsets"/>
    </entry>
    <entry name="glyphDataFormat" type="SHORT"/>
</table>