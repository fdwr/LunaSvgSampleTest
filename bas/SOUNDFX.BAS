DEFINT A-Z
COLOR 7: CLS

PRINT "Welcome to weirdness": GOSUB Weirdify
 s! = TIMER: DO UNTIL TIMER - s! > 1 OR INKEY$ > "": LOOP
PRINT "Alert": GOSUB Alert
PRINT "Lift Up": GOSUB LiftUp
PRINT "Hover": GOSUB Hover
PRINT "Take Off": GOSUB TakeOff
 s! = TIMER: DO UNTIL TIMER - s! > 1 OR INKEY$ > "": LOOP
PRINT "Landing": GOSUB Land
SYSTEM

Weirdify: FOR s = 12000 TO 1 STEP -20: SOUND 18000 - s, .023: SOUND 200 + INT(RND * s), .023: NEXT: RETURN
Alert: FOR r = 1 TO 3: PALETTE 0, 4: FOR s = 1 TO 29: SOUND 100, .23: SOUND 98, .23: NEXT s: PALETTE: FOR s = 1 TO 50: SOUND 0, .23: NEXT s: NEXT r: RETURN
LiftUp: FOR s = 37 TO 1000: SOUND s, .06: SOUND s + INT(RND * 200), .06: NEXT s: RETURN
Hover: FOR s = 1 TO 600: SOUND 1005, .06: SOUND 1005 + INT(RND * 200), .06: NEXT s: RETURN
TakeOff: FOR s = 1 TO 12000 STEP 20: SOUND 200 + INT(RND * 700), .023: SOUND 400 + s, .023: NEXT: RETURN
Land: FOR s = 12000 TO 1 STEP -20: SOUND s + 400, .023: SOUND 200 + INT((RND * s) \ 50), .023: NEXT: RETURN

